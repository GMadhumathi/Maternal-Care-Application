<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:weightSum="10"
    android:background="@drawable/ex_bg"
    tools:context=".m_ex4Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-171dp"
        tools:layout_editor_absoluteY="47dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10"
            app:layout_constraintBaseline_toBaselineOf="parent">

            <View
                android:layout_width="wrap_content"
                android:layout_height="40dp" />

            <ImageView
                android:id="@+id/m_ex4"
                android:layout_width="281dp"
                android:layout_height="255dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/ex4"></ImageView>

            <View
                android:layout_width="wrap_content"
                android:layout_height="30dp" />

            <TextView
                android:layout_width="344dp"
                android:layout_height="600dp"
                android:layout_gravity="center_horizontal"
                android:justificationMode="inter_word"
                android:text="During the fourth month of pregnancy, it's essential to focus on exercises that promote overall strength, flexibility, and well-being while considering the safety and comfort of both the mother and the growing baby. \n\n
        Always consult with your healthcare provider before starting or continuing any exercise program during pregnancy.\n\n
• Lessened back pain\n
• More flexible muscles and overall looseness, which make you more comfortable\n
• Improved range of motion\n
• Good preparation for labor\n
• Prevents muscle cramp\n
• Improves Postpartum Recovery\n
• Enhances sleep quality\n
• Boosts Mood and energy levels"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="italic" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="40dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
