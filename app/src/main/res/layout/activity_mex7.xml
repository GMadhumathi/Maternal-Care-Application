<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ex_bg"
    tools:context=".m_ex7Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-171dp"
        tools:layout_editor_absoluteY="47dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        app:layout_constraintBaseline_toBaselineOf="parent">

    <View
        android:layout_width="wrap_content"
        android:layout_height="40dp" />

    <ImageView
        android:id="@+id/m_ex7"
        android:layout_width="281dp"
        android:layout_height="280dp"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/ex7"></ImageView>

    <View
        android:layout_width="wrap_content"
        android:layout_height="30dp" />


    <TextView
        android:layout_width="344dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:justificationMode="inter_word"
        android:text="Seated Leg Extensions:"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="20dp" />
        <TextView
            android:layout_width="344dp"
            android:layout_height="420dp"
            android:layout_gravity="center_horizontal"
            android:justificationMode="inter_word"
            android:text="   • Sit on a sturdy chair with your back straight and your feet flat on the ground.\n\n
    • Hold onto the sides of the chair for support if needed.\n \n
    • Extend one leg out in front of you, keeping it straight but not locked. \n\n
    • Hold for a few seconds, then lower your leg back down. Switch to the other leg and repeat. \n\n
    • Do 2 sets of 10-12 extensions on each leg."
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="italic" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="40dp" />
    </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>